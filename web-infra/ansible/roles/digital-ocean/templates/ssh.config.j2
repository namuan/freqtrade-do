# {{ ansible_managed }}
Host root-{{app_name}}
    User root
    HostName {{ digital_ocean_droplet.data.ip_address }}
    IdentitiesOnly yes
    IdentityFile {{ssh_pub_key}}
    UserKnownHostsFile /dev/null
    StrictHostKeyChecking no

Host {{app_name}}
    User {{deploy_user}}
    HostName {{ digital_ocean_droplet.data.ip_address }}
    IdentitiesOnly yes
    IdentityFile {{ssh_pub_key}}
    UserKnownHostsFile /dev/null
    StrictHostKeyChecking no